{
  "compilerOptions": {
    "target": "es2019",
    // "module": "esnext",
    "module": "commonjs",
    "strict": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "outDir": "../server_build" /* Redirect output structure to the directory. */,
    "experimentalDecorators": true /* Enables experimental support for ES7 decorators. */,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": ["webpack-env"],
    "typeRoots": ["./node_modules/@types", "./server/src/@types/nodefine.d.ts"],
    "lib": ["es2019"]
  },
  "include": ["../client/**/*.ts", "*.js", "*.ts"],
  "exclude": ["../node_modules"]
}
